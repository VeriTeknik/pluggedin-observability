# Domain Configuration
DOMAIN=monitoring.plugged.in
EMAIL=admin@plugged.in

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# Traefik Configuration
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=changeme_secure_password

# PostgreSQL Exporter Configuration
# Format: postgresql://user:password@host:port/database
POSTGRES_EXPORTER_DSN=postgresql://postgres:password@host:5432/pluggedin

# Retention Configuration
PROMETHEUS_RETENTION=15d
LOKI_RETENTION=360h

# Alert Configuration (Optional)
SLACK_WEBHOOK_URL=
PAGERDUTY_KEY=
ALERT_EMAIL=

# Observability Endpoints (services to monitor)
# These are the endpoints that Prometheus will scrape
PLUGGEDIN_APP_URL=https://plugged.in
REGISTRY_PROXY_URL=https://registry.plugged.in
API_SERVER_URL=https://api.plugged.in
MCP_PROXY_URL=https://mcp.plugged.in
